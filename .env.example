# ── Build-time (must be set before `nuxt build`) ─────────────────────

# Base path for the app (e.g. "/dropbox" to serve at http://host/dropbox/)
FILE_DROPBOX_BASE_PATH=/

# ── Runtime-Only (can be changed without rebuilding) ─────────────────────

# Directory to store uploaded files
FILE_DROPBOX_UPLOAD_DIR=./uploads

# Max upload size in bytes (default: 10 GB)
FILE_DROPBOX_MAX_FILE_SIZE=10737418240

# SQLite database file path
FILE_DROPBOX_DB_PATH=./data/uploads.db

# Set to "true" when behind a trusted reverse proxy (enables X-Forwarded-* headers)
FILE_DROPBOX_TRUST_PROXY=false
